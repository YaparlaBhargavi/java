import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {
        ArrayList<Integer> list = new ArrayList<>();

        list.add(10);
        list.add(20);
        list.add(30);
        list.add(40);

        list.remove(2);     // delete by index
        // list.remove(Integer.valueOf(30)); // delete by value

        System.out.println(list);
    }
}
